@page "{id:int}"
@model ASPNetGerenciadorVeiculos.Pages.Veiculos.DetalharModel
@{
    ViewData["Title"] = "Detalhes do Veículo";
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Inter', sans-serif;
        }
        .vehicle-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .vehicle-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.15);
        }
        .vehicle-image {
            max-height: 300px;
            object-fit: cover;
            border-radius: 15px 15px 0 0;
        }
        .detail-label {
            font-weight: 600;
            color: #495057;
        }
        .detail-value {
            color: #212529;
        }
        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
            transition: background-color 0.3s ease;
        }
        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }
        .btn-outline-secondary {
            transition: background-color 0.3s ease, color 0.3s ease;
        }
        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: #fff;
        }
       
    </style>
</head>
<body>
    <div class="container py-5">
        <h2 class="text-center mb-4">@ViewData["Title"]</h2>
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="vehicle-card p-4 bg-white">
                    @if (!string.IsNullOrEmpty(Model.Veiculo.DirFoto))
                    {
                        <img src="@Model.Veiculo.DirFoto" alt="Imagem do veículo" class="vehicle-image w-100 mb-4">
                    }
                    else
                    {
                        <div class="vehicle-image w-100 mb-4 bg-light d-flex align-items-center justify-content-center" style="height: 300px;">
                            <span class="text-muted">Sem imagem disponível</span>
                        </div>
                    }
                    <div class="row g-3">
                        <div class="col-12 col-sm-6">
                            <label class="detail-label">ID:</label>
                            <p class="detail-value">@Model.Veiculo.Id</p>
                        </div>
                        <div class="col-12 col-sm-6">
                            <label class="detail-label">Nome:</label>
                            <p class="detail-value">@Model.Veiculo.Nome</p>
                        </div>
                        <div class="col-12 col-sm-6">
                            <label class="detail-label">Modelo:</label>
                            <p class="detail-value">@Model.Veiculo.Modelo</p>
                        </div>
                        <div class="col-12 col-sm-6">
                            <label class="detail-label">Marca:</label>
                            <p class="detail-value">@Model.Veiculo.Marca</p>
                        </div>
                        <div class="col-12 col-sm-6">
                            <label class="detail-label">Renavam:</label>
                            <p class="detail-value">@Model.Veiculo.Renavam</p>
                        </div>
                        <div class="col-12 col-sm-6">
                            <label class="detail-label">Ano de Fabricação:</label>
                            <p class="detail-value">@Model.Veiculo.AnoFabricacao</p>
                        </div>
                        <div class="col-12 col-sm-6">
                            <label class="detail-label">Ano do Modelo:</label>
                            <p class="detail-value">@Model.Veiculo.AnoModelo</p>
                        </div>
                    </div>
                    <div class="mt-4 d-flex justify-content-between">
                        <a asp-page="./Editar" asp-route-id="@Model.Veiculo.Id" class="btn btn-primary">Editar</a>
                        <a asp-page="./Index" class="btn btn-outline-secondary">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
</html>